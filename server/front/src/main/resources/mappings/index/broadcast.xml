<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rmkj.microcap.modules.index.dao.BroadcastDao">
    <select id="findList" resultType="com.rmkj.microcap.modules.index.entity.Broadcast">
        SELECT
          id,
          sort_no AS sortNo,
          title
        FROM tb_article
        WHERE `status` = 0 AND del_flag = 0
        ORDER BY sort_no
    </select>

    <select id="findById" parameterType="string" resultType="com.rmkj.microcap.modules.index.entity.Broadcast">
        SELECT
          id,
          sort_no AS sortNo,
          title,
          content
        FROM tb_article
        WHERE `status` = 0 AND del_flag = 0 AND id = #{id}
    </select>

    <select id="queryBroadcastList" resultType="com.rmkj.microcap.modules.index.entity.Broadcast" parameterType="com.rmkj.microcap.modules.index.entity.Broadcast">
        SELECT
        id,
        sort_no AS sortNo,
        title,
        content
        FROM tb_article
        WHERE `status` = 0 AND del_flag = 0
        ORDER BY sort_no
    </select>

</mapper>